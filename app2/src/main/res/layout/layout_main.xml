<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.kloktig.accountmanager.other.MainActivity">

    <StackView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </StackView>

    <TextView
        android:id="@id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The User Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="26dp"/>

    <TextView
        android:id="@id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The User Name"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="26dp"
        />

    <TextView
        android:id="@id/refresh_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Token!"
        app:layout_constraintTop_toBottomOf="@id/user_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16dp"
        />

    <Button
        android:id="@id/refresh_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refresh_token"
        />

    <Button
        android:id="@id/load_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Load"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refresh_button"
        />


</androidx.constraintlayout.widget.ConstraintLayout>